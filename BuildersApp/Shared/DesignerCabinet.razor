    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">TIN</label>
        <InputText @bind-Value="@_designer.Tin" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.Tin"/>
    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">OGRN</label>
        <InputText @bind-Value="@_designer.Ogrn" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.Ogrn"/>
    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">KPP</label>
        <InputText @bind-Value="@_designer.Kpp" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.Kpp"/>
    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">Address</label>
        <InputText @bind-Value="@_designer.Address" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.Address"/>
    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">Director</label>
        <InputText @bind-Value="@_designer.Director" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.Director"/>
    </div>
    <div class="form-outline flex-fill mb-2">
        <label class="form-label" for="form3Example1c">Lead engineer</label>
        <InputText @bind-Value="@_designer.LeadEngineer" type="text" id="form3Example1c" class="form-control"/>
        <ValidationMessage For="() => _designer.LeadEngineer"/>
    </div>
    <ValidationSummary/>
</EditForm>

@code {

    [Parameter]
    public PersonalInfoBase PersonalInfo { get; set; }

    private DesignerPersonalInfo _designer;

    protected override void OnInitialized()
    {
        _designer = (DesignerPersonalInfo)PersonalInfo;
    }

}